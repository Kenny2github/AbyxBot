{% extends "base.jinja2" %}

{% block title %}
{{ title }} - {{ super() }}
{% endblock title %}

{% block styles %}
	{{ super() }}
	<link rel="stylesheet" href="/static/toggle.css" />
{% endblock styles %}

{% block body %}
	<h1>{{ title }}</h1>
	<form
		method="POST" autocomplete="off"
		class="spread" style="align-items: flex-start;"
	>
		<div>
		<p class="spread">
			<label for="lang">{{ language }}</label>
			<select id="lang" name="lang">
				{% for code, name in langs.items() %}
				<option
					value="{{ code }}"
					{% if code == lang %}
					selected
					{% endif %}
				>{{ name }}</option>
				{% endfor %}
			</select>
		</p>
		<p class="spread">
			<button type="submit">{{ save }}</button>
			<a href="/" class="button">{{ back }}</a>
		</p>
		</div>
		<div><table>
			<caption>{{ ping_caption }}</caption>
			<tr><th>{{ game_th }}</th><th>{{ ping_th }}</th></tr>
			{% for game, game_name, do_ping in games %}
			<tr>
				<td>{{ game_name }}</td>
				<td><label class="switch">
					<input
						type="checkbox"
						name="games"
						value="{{ game }}"
						{% if do_ping %}
						checked
						{% endif %}
					/>
					<span></span>
				</label></td>
			</tr>
			{% endfor %}
		</table></div>
	</form>
{% endblock body %}
